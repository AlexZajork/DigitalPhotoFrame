{
  "AppSettings": {
    "imageDuration": 30, 
    "blurBackground": "true", //When the image does not fill the screen, use a blured image as the background or fill with black background.
    "showClock": "true",
    "showWeather": "true",

    // Set weather location, unites, and API key. See openweathermap.org for API documentation. 
    "weatherApiURL": "http://api.openweathermap.org/data/2.5/weather?q=Milwaukee,US&units=imperial&appid=SET_API_KEY_HERE"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
